---
import "../styles/style.css";
const { h3 } = Astro.props;
---

<article>
  <div class="tekst_indhold1">
    <h3>{h3}</h3>
    <slot />
  </div>
  <div class="billede_indhold1">
    <iframe style="border-radius:12px" src="https://open.spotify.com/embed/album/6KQjta3e4EszUXwo0OBGSB?utm_source=generator&theme=0" width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
  </div>
</article>

<style>
  h3 {
    padding-bottom: 30px;
  }
  /* ___________________________ TABLET  ___________________________*/
  @media screen and (min-width: 768px) {
    article {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 44px;
      align-items: center;
    }
  }
</style>
