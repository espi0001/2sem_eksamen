---
import "../styles/style.css";
const { style, linket } = Astro.props;
---

<a href={linket} class={style}><slot /></a>

<style>
  a {
    /* display: inline-block;
    font-size: 1rem;
    padding: 12px 36px;
    border-width: 0.8px;
    border-style: solid;
    text-decoration: none; */
    cursor: pointer;
    transition: all 0.55s ease;
  }

  .primary a {
    text-decoration: none;
  }
  .primary a:hover {
    text-decoration: underline;
  }

  .secondary a {
    text-decoration: none;
    font-weight: bold;
  }
  .secondary a:hover {
    font-weight: bold;
    text-decoration: underline;
  }

  .tertiary a {
    text-decoration: none;
  }
  .tertiary a:hover {
    text-decoration: underline;
  }
</style>
