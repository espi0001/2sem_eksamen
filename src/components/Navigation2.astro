---
import "../styles/style.css";
---

<header>
  <div class="logo">
    <a href="/">
      <img src="/logo/LogoWhite.svg" alt="Logo" />
    </a>
  </div>

  <nav>
    <ul class="menu">
      <hr />
      <li><a href="/2_koncerter">Koncerter</a></li>
      <hr />
      <li><a href="/3_merchandise">Merchandise</a></li>
      <hr />
      <li><a href="/7_ombarselona">Om Barselona</a></li>
      <hr />
      <li><a href="/8_videoer">Videoer</a></li>
      <hr />
      <li><a href="/9_kontakt">Kontakt</a></li>
      <hr />
      <li class="kurv">
        <a href="#"><img src="/iconer2/IconCart2.svg" alt="Kurv icon" /></a>
      </li>
    </ul>

    <div class="burger">
      <div class="line"></div>
      <div class="line"></div>
      <div class="line"></div>
    </div>
  </nav>
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    width: 100%;
    padding-top: 25px;
    padding-bottom: 25px;
    padding-inline: 36px;
    z-index: 1;
  }
  .logo {
    z-index: 5;
  }
  .logo img {
    width: 55px;
    height: auto;
  }

  nav {
    display: flex;
    align-items: center;
  }

  .menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    flex-wrap: nowrap;
    align-items: center;
  }

  .menu li {
    margin-right: 20px;
  }

  .menu li:last-child {
    margin-right: 0;
  }

  .menu a {
    display: block;
    padding: 10px;
    color: var(--color_white);
    font-size: var(--font_size_medium);
    text-decoration: none;
    transition: color 0.3s;
    text-align: end;
    font-weight: normal;
  }

  .menu a:hover {
    color: var(--color_blue);
  }
  hr {
    display: none;
  }
  .burger {
    width: 30px;
    height: 20px;
    cursor: pointer;
  }

  .burger .line {
    width: 100%;
    height: 2px;
    background-color: var(--color_white);
    margin-bottom: 5px;
    transition: 0.2s linear;
  }
  .burger {
    display: none;
  }
  /* __________________________ Tablet delen __________________________ */
  /* Reglen gælder til og med 1024px */
  @media screen and (max-width: 1024px) {
    header {
      padding-inline: 40px;
      text-align: start;
    }
    .menu {
      display: none;
      text-align: start;
    }
    .burger {
      display: block;
      text-align: start;
      z-index: 1;
    }

    .burger.active .line:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
      transition: 0.2s linear;
    }

    .burger.active .line:nth-child(2) {
      opacity: 0;
      transition: 0.15s linear;
    }

    .burger.active .line:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
      transition: 0.2s linear;
    }

    nav.active .menu {
      display: block;
      background-color: var(--color_black);
      position: absolute;
      top: 0px;
      left: 0;
      width: 100%;
      z-index: 1;
      text-align: start;
      padding-top: 100px;
    }

    nav.active .menu li {
      margin: 10px 20px;
      text-align: start;
    }

    nav.active .menu a {
      font-size: var(--font_size_large);
      text-align: start;
    }
    hr {
      display: block;
      border-image: var(--color_black) 1;
    }
    .logo img {
      width: 55px;
      height: auto;
    }
    li:last-child img {
      max-width: 45px;
      height: auto;
    }
  }

  /* __________________________ Mobil delen __________________________ */
  /* Reglen gælder til og med 768px */
  @media screen and (max-width: 768px) {
    header {
      padding-inline: 20px;
      text-align: start;
    }

    nav.active .menu a {
      font-size: var(--font_size_medium);
      text-align: start;
    }
    .logo img {
      width: 50px;
      height: auto;
    }
    li:last-child img {
      max-width: 40px;
      height: auto;
    }
  }
</style>

<script>
  const burger = document.querySelector(".burger");
  const nav = document.querySelector("nav");
  const menu = document.querySelector(".menu");
  const links = document.querySelectorAll(".menu li a");

  burger.addEventListener("click", () => {
    burger.classList.toggle("active");
    nav.classList.toggle("active");
  });

  links.forEach((link) => {
    link.addEventListener("click", () => {
      burger.classList.remove("active");
      nav.classList.remove("active");
    });
  });
</script>
