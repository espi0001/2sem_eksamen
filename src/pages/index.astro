---
import "../styles/style.css";
import MainLayout from "../layouts/MainLayout.astro";
import Newsletter from "../components/Newsletter.astro";
---

<MainLayout title="Barselona | Forside">
  <div id="overlay"></div>
  <main>
    <article class="hero">
      <div class="content">
        <div class="text" id="herotitle">
          <h1>BARSELONA</h1>
        </div>

        <div class="lyt">
          <a href="#musik" class="listen-link"><img src="/iconer2/IconArrowDown.svg" alt="pil ned" /></a>

          <a href="#musik" class="listen-link"> LYT TIL NYESTE ALBUM</a>
        </div>
      </div>
    </article>
    <section id="musik" class="musik">
      <iframe style="border-radius:12px" src="https://open.spotify.com/embed/album/6KQjta3e4EszUXwo0OBGSB?utm_source=generator&theme=0" width="100%" height="552" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
    </section>
    <section>
      <Newsletter />
    </section>
  </main>
</MainLayout>

<style>
  #overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
    z-index: 9999;
  }
  .hero {
    background-image: url(https://esterpiazza.dk/kea/10_eksamen/indhold/01_forside_barselona-hero-image.avif);
    background-size: cover;
    aspect-ratio: 16 / 9;

    padding-top: 20px;
    padding-inline: 20px;
  }
  .content {
    display: flex;
    max-width: 1600px;
    flex-direction: column;
  }
  .navigation {
    z-index: 1;
  }
  .text {
    margin: auto;
    padding-top: 18%;
  }
  h1 {
    font-size: 8.5cqw;
  }
  .lyt {
    padding-top: 5%;
    display: flex;
    margin: auto;
  }
  .lyt img {
    max-width: 30px;
    align-self: center;
  }
  .listen-link {
    display: flex;
    align-items: center;
  }

  .lyt a {
    font-size: var(--font_size_tiny);
  }
  .listen-link:hover {
    color: var(--color_blue);
    text-decoration: none;
  }
  .sociale_grid {
    display: flex;
    flex-direction: column;
  }
  .sociale_links {
    display: flex;
    gap: 12px;
    align-items: center;
    justify-content: center;
  }
  .sociale_links a {
    background-color: var(--color_white);
    border-radius: 50px;
    width: 30px;
    height: auto;
    font-size: var(--font_size_medium);
  }
  .sociale_links a:hover {
    background-color: var(--color_blue);
  }

  @media screen and (min-width: 768px) {
    .text {
      margin: auto;
      padding-top: 23%;
    }
    .lyt img {
      max-width: 30px;
    }
    .lyt a {
      font-size: var(--font_size_small);
    }
  }

  @media screen and (min-width: 1024px) {
    .hero {
      padding-top: 25px;
      padding-inline: 36px;
    }

    .text {
      margin: auto;
    }

    .lyt {
      padding-top: 20px;
    }
    .lyt img {
      max-width: 30px;
    }
    .lyt a {
      font-size: var(--font_size_regular);
    }
  }

  @media screen and (min-width: 1440px) {
    h1 {
      font-size: 8.5rem;
    }
  }
</style>

<script>
  import Splitting from "splitting";
  import "splitting/dist/splitting.css"; // Importer Splitting.js CSS
  import gsap from "gsap";
  document.addEventListener("DOMContentLoaded", () => {
    const overlay = document.getElementById("overlay");
    const herotitle = document.getElementById("herotitle").querySelector("h1");

    if (herotitle) {
      const result = Splitting({ target: herotitle, by: "chars" });

      const chars = result[0].chars;

      const tl = gsap.timeline();

      tl.to(overlay, {
        duration: 1,
        scaleY: 0,
        transformOrigin: "top",
        ease: "power2.inOut",
      });

      tl.from(
        chars,
        {
          opacity: 0,
          y: 80,
          rotateX: -90,
          stagger: 0.05,
          duration: 1,
          ease: "back.out(1.7)",
        },
        "-=0.5"
      );
    }
  });
</script>
