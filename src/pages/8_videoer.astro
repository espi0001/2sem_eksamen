    <OneVideo image="https://esterpiazza.dk/kea/10_eksamen/videoer/etaar.webp" loading="lazy" />
    <OneVideo image="https://esterpiazza.dk/kea/10_eksamen/videoer/densidstesang.webp" loading="lazy" />
    <OneVideo image="https://esterpiazza.dk/kea/10_eksamen/videoer/barcelona.webp" loading="lazy" />
  </section>
</MainLayout>

<style>
  .hero_items {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 80px;
  }
  .videoafspiller {
    padding-bottom: 32px;
  }
  .videoer_galleri {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 22px;
    justify-content: center;
  }

  /* ___________________________ TABLET  ___________________________*/
  @media screen and (min-width: 768px) {
    .videoer_galleri {
      grid-template-columns: 1fr 1fr 1fr;
      gap: 32px;
    }
  }

  /* ___________________________ DESKTOP  ___________________________*/
  @media screen and (min-width: 1024px) {
    .videoer_galleri {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr;
    }
  }
</style>
