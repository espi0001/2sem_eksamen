---
import "../styles/style.css";
import MainLayout from "../layouts/MainLayout.astro";
import Koncertdato from "../components/Koncertdato.astro";
import Timer from "../components/Timer.astro";
import Header2 from "../components/Header2.astro";
import Button from "../components/Button.astro";
import KasseText from "../components/KasseText.astro";
---

<MainLayout title="Koncerter">
  <section class="hero_items">
    <div class="hero_top">
      <Header2 header1="Koncerter 2024" />

      <div class="to_links">
        <div class="lyt2">
          <a href="#tour" class="listen-link"><img src="/iconer2/IconArrowDown.svg" alt="pil ned" /></a>

          <a href="#tour" class="listen-link"> Efterårstour</a>
        </div>
        <div class="lyt2">
          <a href="#festivaller" class="listen-link"><img src="/iconer2/IconArrowDown.svg" alt="pil ned" /></a>

          <a href="#festivaller" class="listen-link"> Festivaller</a>
        </div>
      </div>
    </div>
  </section>

  <section id="tour">
    <KasseText h2="Efterårstour 2024" image="https://esterpiazza.dk/kea/10_eksamen/side_om_dem/koncertbillede.avif" image_alt="Rud og Rasmus sidder">
      <Timer />
    </KasseText>
  </section>
</MainLayout>

<style>
  .hero_items {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 80px;
    margin-bottom: 125px;
  }
  .hero_top {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  .to_links {
    display: flex;
    gap: 80px;
  }

  .lyt2 {
    display: flex;
    align-items: center;
  }
  .lyt2 img {
    max-width: 30px;
    align-self: center;
  }

  .lyt2 a {
    font-size: var(--font_size_small);
  }
  .listen-link {
    display: flex;
    align-items: center;
  }
  .listen-link:hover {
    color: var(--color_blue);
    text-decoration: none;
  }

  .index-background {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: brightness(25%);
  }

  /* ___________________________ TABLET  ___________________________*/
  /* reglerne gælder når skærmen er minimum 768px */
  @media screen and (min-width: 768px) {
    .hero_items {
      align-items: start;
    }
  }

  /* ___________________________ DESKTOP  ___________________________*/
  @media screen and (min-width: 1024px) {
    .hero_items {
      display: flex;
      align-items: start;
      margin-top: 125px;
    }

    .hero_top {
      display: block;
      text-align: start;
    }
  }
</style>
