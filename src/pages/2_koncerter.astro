---
import "../styles/style.css";
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Links from "../components/Links.astro";
import Header1 from "../components/Header1.astro";
import Koncertdato from "../components/Koncertdato.astro";
---

<MainLayout title="Koncerter">
  <article class="content">
    <h1>Barselona</h1>
  </article>
  <section class="koncerter">
    <div><Koncertdato sted="Fredagsrock" dato="24 maj 2024" lokation="København, Tivoli" /></div>
    <div><Koncertdato sted="Northside" dato="8 juni 2024" lokation="Aahus, Northside" /></div>
    <div><Koncertdato sted="Roskilde Festival" dato="06 juli 2024" lokation="Roskilde, Roskilde Festival" /></div>
    <div><Koncertdato sted="Gæsten" dato="23 juli 2024" lokation="Allinge, Gæstgiveren" /></div>
    <div><Koncertdato sted="Suset Festival" dato="16 august 2024" lokation="Esbjerg, Esbjerghavn" /></div>
    <div><Koncertdato sted="Landsbyen" dato="17 august 2024" lokation="Odense, Den Fynske Landsby" /></div>
  </section>

  <article class="content">
    <h1>Barselona</h1>
    <h4>Efterårs tour 2024</h4>
  </article>
  <section class="koncerter">
    <div>
      <Koncertdato sted="Næstved" dato="13 september 2024" lokation="Næstved, Vershuset" />
      <Koncertdato sted="Skjern" dato="14 september 2024" lokation="Skjern, Remisen" />
      <Koncertdato sted="Svendborg" dato="20 september 2024" lokation="Svendborg, Borgerforeningen" />
      <Koncertdato sted="Nørup" dato="25 september 2024" lokation="Nørup, Engelsholm" />
      <Koncertdato sted="Sønderborg" dato="29 september 2024" lokation="Sønderborg, Sønderborghus" />
    </div>
    <div>
      <Koncertdato sted="Horsens" dato="12 oktober 2024" lokation="Horsens Ny Teater" />
      <Koncertdato sted="Flensborg" dato="17 oktober 2024" lokation="Tyskland, Flensborg, Flensborghus" />
      <Koncertdato sted="Skive" dato="18 oktober 2024" lokation="Skive, Skive Teater" />
      <Koncertdato sted="Helsingør" dato="19 oktober 2024" lokation="Helsingør, Toldkammeret" />
      <Koncertdato sted="København" dato="26 oktober 2024" lokation="København, Falkoner Salen" />
    </div>
  </section>
</MainLayout>

<style>
  .koncerter {
    display: block;
  }

  article {
    text-align: center;
    padding: 80px;
    background-image: url(https://esterpiazza.dk/kea/10_eksamen/indhold/02_koncert_header1.avif);
    background-size: cover;
  }

  h4 {
    text-transform: uppercase;
  }

  /* ___________________________ TABLET  ___________________________*/
  /* reglerne gælder når skærmen er minimum 768px */
  @media screen and (min-width: 768px) {
    .koncerter {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 64px;
    }
  }

  /* ___________________________ DESKTOP  ___________________________*/
  @media screen and (min-width: 1024px) {
  }
</style>
