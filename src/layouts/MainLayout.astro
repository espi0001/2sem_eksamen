---
import "../styles/style.css";
import Navigation2 from "../components/Navigation2.astro";
import Footer from "../components/Footer.astro";
import Newsletter from "../components/Newsletter.astro";
import Topknap from "../components/Topknap.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <!-- europæisk sprog -->
    <meta charset="utf-8" />

    <!-- Det eks hvis man bruger safari - så browser ser ens ud-->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Fortæller at det er et pesponsivt site -->
    <meta name="viewport" content="width=device-width" />

    <!-- SEO -->
    <meta name="description" content="Eksamensprojekt" />
    <meta name="author" content="Ester, Sebastian, Rose og Nicoline" />
    <meta name="copyright" content="Team_10" />

    <!-- Den kommer ikke frem hos søgemaskiner -->
    <meta name="robots" content="noindex, nofollow" />

    <!-- fa-icon -->
    <link rel="icon" type="image/svg+xml" href="/logo/LogoBlack.svg" />

    <!-- FONTE Roboto  -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />

    <!-- FONTE -  -->

    <meta name="generator" content={Astro.generator} />

    <!-- titel på siden -->
    <title>{title}</title>
  </head><body id="top">
    <Navigation2 />
    <main>
      <slot />
      <Topknap />
    </main>
    <Newsletter />

    <Footer />
    <script></script>
  </body>
</html>
